{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ReadAny",
  "version": "0.1.0",
  "identifier": "com.readany.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "ReadAny",
        "width": 1280,
        "height": 800,
        "minWidth": 960,
        "minHeight": 600,
        "hiddenTitle": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": 12,
          "y": 10
        },
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$RESOURCE/**",
            "$APPDATA/**",
            "$APPLOCALDATA/**",
            "$APPCACHE/**",
            "$APPCONFIG/**",
            "$HOME/**",
            "$DESKTOP/**",
            "$DOCUMENT/**",
            "$DOWNLOAD/**",
            "**"
          ]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": ["https://readany.app/api/update/{{target}}/{{arch}}/{{current_version}}"],
      "pubkey": ""
    }
  }
}
